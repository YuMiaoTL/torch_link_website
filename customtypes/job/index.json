{
  "id": "job",
  "label": "Job",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "senior-engineer"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Job Title",
          "placeholder": "e.g. Senior Software Engineer"
        }
      },
      "location": {
        "type": "Text",
        "config": {
          "label": "Job Location",
          "placeholder": "e.g. New York, NY or Remote"
        }
      },
      "salary": {
        "type": "Text",
        "config": {
          "label": "Salary",
          "placeholder": "e.g. $120,000 - $150,000"
        }
      },
      "job_type": {
        "type": "Select",
        "config": {
          "label": "Job Type",
          "placeholder": "Select job type",
          "options": [
            "Full-time",
            "Part-time",
            "Contract",
            "Internship",
            "Temporary"
          ]
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Detailed job description...",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "responsibilities": {
        "type": "StructuredText",
        "config": {
          "label": "Key Responsibilities",
          "placeholder": "List of responsibilities...",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "qualifications": {
        "type": "StructuredText",
        "config": {
          "label": "Qualifications",
          "placeholder": "List of qualifications...",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      }
    }
  }
}
